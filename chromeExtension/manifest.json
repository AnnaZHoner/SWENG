{
    "name": "Disaster Warning",
    "version": "1.0",
    "description": "Provide warnings and information for current disasters.",
    "background": {
        "scripts": ["jquery.js","background.js","pouchdb-7.0.0.min.js"],
        "persistent": true
      },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "32": "icon/icon_32.png",
            "64": "icon/icon_64.png",
            "128": "icon/icon_128.png",
            "256": "icon/icon_256.png"
          }
    },
    "icons": {
            "32": "icon/icon_32.png",
            "64": "icon/icon_64.png",
            "128": "icon/icon_128.png",
            "256": "icon/icon_256.png"
      },
    "permissions": [
        "storage",
        "geolocation"
    ],
    "web_accessible_resources": [
      "data/data.json",
      "image/dangerous.png",
      "image/notice.png",
      "image/warning.png"
    ],
    "manifest_version": 2
  }